#!/usr/bin/env bash
# Change facebook.com to point to 8.8.8.8 instead of its real IP

# Check if we have sudo privileges
if [ "$EUID" -ne 0 ]; then
    echo "Please run with sudo: sudo ./0-change_your_home_IP"
    exit 1
fi

# Remove any existing facebook.com entries from /etc/hosts
sed -i '/facebook.com/d' /etc/hosts

# Add new entry mapping facebook.com to 8.8.8.8
echo "8.8.8.8 facebook.com" >> /etc/hosts

echo "Facebook.com now points to 8.8.8.8"
