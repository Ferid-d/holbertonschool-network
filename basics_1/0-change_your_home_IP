#!/usr/bin/env bash
# Change localhost IP from 127.0.0.1 to 127.0.0.2 by modifying /etc/hosts

# Check if we have sudo privileges
if [ "$EUID" -ne 0 ]; then
    echo "Please run with sudo: sudo ./0-change_your_home_IP"
    exit 1
fi

# Modify /etc/hosts to change localhost IP
sed -i 's/127\.0\.0\.1/127.0.0.2/g' /etc/hosts
sed -i 's/::1/::2/g' /etc/hosts  # Also change IPv6 if needed

echo "Localhost IP changed to 127.0.0.2"
